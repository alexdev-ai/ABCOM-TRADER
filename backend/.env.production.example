# Production Environment Variables for Railway
# Copy this file to set up your production environment

# Application
NODE_ENV=production
PORT=8000

# Database (Railway will provide these automatically)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://username:password@host:port

# JWT Configuration
JWT_SECRET=your-super-secure-256-bit-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Alpaca Trading API (Production)
ALPACA_API_KEY=your-alpaca-production-api-key
ALPACA_SECRET_KEY=your-alpaca-production-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# CORS Configuration
FRONTEND_URL=https://forkcast.net
CORS_ORIGINS=https://forkcast.net,https://www.forkcast.net

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
TRADING_RATE_LIMIT_MAX=10

# Security
HELMET_CSP_ENABLED=true
SESSION_COOKIE_SECURE=true

# Monitoring and Logging
LOG_LEVEL=info
AUDIT_SECRET_KEY=your-audit-trail-secret-key-for-signatures

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_USER=3

# Background Jobs
BULL_REDIS_URL=redis://username:password@host:port
JOB_CONCURRENCY=5
JOB_ATTEMPTS=3

# Email Configuration (if needed for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@forkcast.net
SMTP_PASS=your-smtp-password
