{
  "version": 2,
  "name": "smarttrade-ai-frontend",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://abcom-trader-production.up.railway.app",
    "VITE_WS_URL": "wss://abcom-trader-production.up.railway.app", 
    "VITE_APP_NAME": "SmartTrade AI",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_ENVIRONMENT": "production",
    "VITE_HEALTH_CHECK_URL": "https://abcom-trader-production.up.railway.app/health"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://abcom-trader-production.up.railway.app/api/$1"
    }
  ]
}
